@model ResetPasswordVM

@{
    Layout = "_LayoutMetronicAccount";
    ViewData["Title"] = "Redefinir Senha";
}

<!--begin::Wrapper-->
<div class="w-lg-500px bg-body rounded shadow-sm p-10 p-lg-15 mx-auto">
	<!--begin::Form-->
    <form class="form w-100" novalidate="novalidate" id="kt_reset_form">
		<!--begin::Heading-->
		<div class="text-center mb-10">
			<!--begin::Title-->
			<h1 class="text-dark mb-3">Redefina sua senha</h1>
			<!--end::Title-->
		</div>
		<!--begin::Heading-->

        <input asp-for="Token" type="hidden" name="token" />
        <input asp-for="Email" type="hidden" name="email" />

        <!--begin::Input group-->
		<div class="fv-row mb-7" data-kt-password-meter="true">
			<!--begin::Wrapper-->
			<div class="mb-1">
				<!--begin::Label-->
				<label class="form-label fw-bolder text-dark fs-6">Senha</label>
				<!--end::Label-->
				<!--begin::Input wrapper-->
				<div class="position-relative mb-3">
					<input class="form-control form-control-lg form-control-solid" type="password" placeholder="" name="password" autocomplete="off" />
					<span class="btn btn-sm btn-icon position-absolute translate-middle top-50 end-0 me-n2" data-kt-password-meter-control="visibility">
						<i class="bi bi-eye-slash fs-2"></i>
						<i class="bi bi-eye fs-2 d-none"></i>
					</span>
				</div>
				<!--end::Input wrapper-->
				<!--begin::Meter-->
				<div class="d-flex align-items-center mb-3" data-kt-password-meter-control="highlight">
					<div class="flex-grow-1 bg-secondary bg-active-success rounded h-5px me-2"></div>
					<div class="flex-grow-1 bg-secondary bg-active-success rounded h-5px me-2"></div>
					<div class="flex-grow-1 bg-secondary bg-active-success rounded h-5px me-2"></div>
					<div class="flex-grow-1 bg-secondary bg-active-success rounded h-5px"></div>
				</div>
				<!--end::Meter-->
			</div>
			<!--end::Wrapper-->
		</div>
		<!--end::Input group=-->
        <!--begin::Input group-->
		<div class="fv-row mb-5">
			<label class="form-label fw-bolder text-dark fs-6">Confirme a senha</label>
			<input class="form-control form-control-lg form-control-solid" type="password" placeholder="" name="cpassword" autocomplete="off" />
		</div>
		<!--end::Input group-->

        <!--begin::Actions-->
        <div class="mb-10 d-flex flex-wrap flex-center pb-lg-0 pb-3">
			<button type="button" id="kt_reset_submit" class="btn btn-lg btn-primary fw-bolder me-4">Redefinir</button>                
        </div>
        <!--end::Actions-->
    </form>
    <!--end::Form-->
</div>
<!--end::Wrapper-->

<script src="~/js/Controllers/Account/Account.js" asp-append-version="true" ></script>
<script type="text/javascript">    
    $(function () {
		AccountAPI.initReset();
    });
</script>