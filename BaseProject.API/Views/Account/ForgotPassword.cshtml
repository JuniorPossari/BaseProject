@model ForgotPasswordVM

@{
    Layout = "_LayoutMetronicAccount";
    ViewData["Title"] = "Esqueci minha senha";
}

<!--begin::Wrapper-->
<div class="w-lg-500px bg-body rounded shadow-sm p-10 p-lg-15 mx-auto">
	<!--begin::Form-->
	<form class="form w-100" novalidate="novalidate" id="kt_forgot_form">
		<!--begin::Heading-->
		<div class="text-center mb-10">
			<!--begin::Title-->
			<h1 class="text-dark mb-3">Esqueceu sua senha ?</h1>
			<!--end::Title-->
			<!--begin::Link-->
			<div class="text-gray-400 fw-bold fs-4">Insira seu email para redefinir sua senha</div>
			<!--end::Link-->
		</div>
		<!--begin::Heading-->
		<!--begin::Input group-->
		<div class="fv-row mb-10">
			<label class="form-label fw-bolder text-gray-900 fs-6">Email</label>
			<input class="form-control form-control-solid" type="text" placeholder="" name="email" />
		</div>
		<!--end::Input group-->
		<!--begin::Actions-->
		<div class="d-flex flex-wrap justify-content-center pb-lg-0">
			<button type="button" id="kt_forgot_submit" class="btn btn-lg btn-primary fw-bolder me-4">Enviar</button>
			<a asp-area="" asp-controller="Account" asp-action="SignIn" class="btn btn-lg btn-secondary fw-bolder">Voltar</a>
		</div>
		<!--end::Actions-->
	</form>
	<!--end::Form-->
</div>
<!--end::Wrapper-->

<script src="~/js/Controllers/Account/Account.js" asp-append-version="true" ></script>
<script type="text/javascript">    
    $(function () {
		AccountAPI.initForgot();
    });
</script>