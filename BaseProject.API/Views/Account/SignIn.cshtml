@model SignInVM

@{
    Layout = "_LayoutMetronicAccount";
    ViewData["Title"] = "Entrar";
}

<!--begin::Wrapper-->
<div class="w-lg-500px bg-body rounded shadow-sm p-10 p-lg-15 mx-auto">
	<!--begin::Form-->
	<form class="form w-100" novalidate="novalidate" id="kt_sign_in_form" data-kt-redirect-url="/Dashboard/Index" action="#">
		<!--begin::Heading-->
		<div class="text-center mb-10">
			<!--begin::Title-->
			<h1 class="text-dark mb-3">Entrar</h1>
			<!--end::Title-->
			<!--begin::Link-->
			<div class="text-gray-400 fw-bold fs-4">Novo aqui?
			<a asp-area="" asp-controller="Account" asp-action="SignUp" class="link-primary fw-bolder">Crie uma conta</a></div>
			<!--end::Link-->
		</div>
		<!--begin::Heading-->
		<!--begin::Input group-->
		<div class="fv-row mb-10">
			<!--begin::Label-->
			<label class="form-label fs-6 fw-bolder text-dark">Email</label>
			<!--end::Label-->
			<!--begin::Input-->
			<input class="form-control form-control-lg form-control-solid" type="text" name="email" />
			<!--end::Input-->
		</div>
		<!--end::Input group-->
		<!--begin::Input group-->
		<div class="fv-row mb-10">
			<!--begin::Wrapper-->
			<div class="d-flex flex-stack mb-2">
				<!--begin::Label-->
				<label class="form-label fw-bolder text-dark fs-6 mb-0">Senha</label>
				<!--end::Label-->
				<!--begin::Link-->
				<a asp-area="" asp-controller="Account" asp-action="ForgotPassword" class="link-primary fs-6 fw-bolder">Esqueceu a senha ?</a>
				<!--end::Link-->
			</div>
			<!--end::Wrapper-->
			<!--begin::Input group-->
			<div class="fv-row mb-7" data-kt-password-meter="true">
				<!--begin::Wrapper-->
				<div class="mb-1">
					<!--begin::Input wrapper-->
					<div class="position-relative mb-3">
						<input class="form-control form-control-lg form-control-solid" type="password" placeholder="" name="password" autocomplete="off" />
						<span class="btn btn-sm btn-icon position-absolute translate-middle top-50 end-0 me-n2" data-kt-password-meter-control="visibility">
							<i class="bi bi-eye-slash fs-2"></i>
							<i class="bi bi-eye fs-2 d-none"></i>
						</span>
					</div>
					<!--end::Input wrapper-->
					<!--begin::Meter-->
					<div class="d-flex d-none align-items-center mb-3" data-kt-password-meter-control="highlight">
						<div class="flex-grow-1 bg-secondary bg-active-success rounded h-5px me-2"></div>
						<div class="flex-grow-1 bg-secondary bg-active-success rounded h-5px me-2"></div>
						<div class="flex-grow-1 bg-secondary bg-active-success rounded h-5px me-2"></div>
						<div class="flex-grow-1 bg-secondary bg-active-success rounded h-5px"></div>
					</div>
					<!--end::Meter-->
				</div>
				<!--end::Wrapper-->
			</div>
			<!--end::Input group=-->
		</div>
		<!--end::Input group-->
		<!--begin::Actions-->
		<div class="text-center">
			<!--begin::Submit button-->
			<button type="submit" id="kt_sign_in_submit" class="btn btn-lg btn-primary w-100 mb-5">Continuar</button>
			<!--end::Submit button-->								
		</div>
		<!--end::Actions-->
	</form>
	<!--end::Form-->
</div>
<!--end::Wrapper-->

<script src="~/js/Controllers/Account/Account.js" asp-append-version="true" ></script>
<script type="text/javascript">    
    $(function () {
		AccountAPI.initSignIn();
    });
</script>
