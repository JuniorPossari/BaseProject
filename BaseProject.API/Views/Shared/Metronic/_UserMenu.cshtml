@using Microsoft.AspNetCore.Identity
@using BaseProject.DAO.Models
@inject UserManager<AspNetUser> userManager

@{
	var user = userManager.ObterPorUserName(User.Identity.Name, "Usuario.IdEmpresaNavigation,Usuario.UsuarioFoto");
	var usuario = new UsuarioVM(user.Usuario);
}

<!--begin::User menu-->
<div class="d-flex align-items-center ms-1 ms-lg-3" id="kt_header_user_menu_toggle">
	<!--begin::Menu wrapper-->
	<div class="cursor-pointer symbol symbol-30px symbol-md-40px" data-kt-menu-trigger="click" data-kt-menu-attach="parent" data-kt-menu-placement="bottom-end">
		<img src="@(string.IsNullOrEmpty(usuario.FotoDataUrl) ? "/Metronic/demo1/dist/assets/media/svg/avatars/blank.svg" : usuario.FotoDataUrl)" alt="user" />
	</div>
	<!--begin::User account menu-->
	<div class="menu menu-sub menu-sub-dropdown menu-column menu-rounded menu-gray-800 menu-state-bg menu-state-primary fw-bold py-4 fs-6 w-auto" data-kt-menu="true">
		<!--begin::Menu item-->
		<div class="menu-item px-3">
			<div class="menu-content d-flex align-items-center px-3">
				<!--begin::Avatar-->
				<div class="symbol symbol-50px me-5">
					<img alt="Logo" src="@(string.IsNullOrEmpty(usuario.FotoDataUrl) ? "/Metronic/demo1/dist/assets/media/svg/avatars/blank.svg" : usuario.FotoDataUrl)" />
				</div>
				<!--end::Avatar-->
				<!--begin::Username-->
				<div class="d-flex flex-column">
					<div class="fw-bolder d-flex align-items-center fs-5">@usuario.Nome</div>
					<a href="javascript:;" class="fw-bold text-muted link-primary fs-7">@usuario.Email</a>
				</div>
				<!--end::Username-->
			</div>
		</div>
		<!--end::Menu item-->
		<!--begin::Menu separator-->
		<div class="separator my-2"></div>
		<!--end::Menu separator-->
		
		<!--begin::Menu item-->
		<div class="menu-item px-5 my-1">
			<a asp-area="" asp-controller="Account" asp-action="Profile" asp-route-id="@user.Id" class="menu-link link-primary px-5">Meu Perfil</a>
		</div>
		<!--end::Menu item-->

		@*<!--begin::Menu item-->
		<div class="menu-item px-5 my-1">
			<a asp-area="" asp-controller="Account" asp-action="TwoFactorAuthentication" class="menu-link link-primary px-5">2FA</a>
		</div>
		<!--end::Menu item-->*@

		<!--begin::Menu item-->
		<div class="menu-item px-5">
			<a asp-area="" asp-controller="Account" asp-action="SignOut" class="menu-link text-hover-danger px-5">Sair</a>
		</div>
		<!--end::Menu item-->
		
	</div>
	<!--end::User account menu-->
	<!--end::Menu wrapper-->
</div>
<!--end::User menu-->